@model GerenciamentoPedidos.Models.Cliente
@{
    ViewData["Title"] = "Excluir Cliente";
}
<h1>Excluir Cliente</h1>
<h4>Tem certeza que deseja excluir este cliente?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>
        <dt class="col-sm-2">Data de Cadastro</dt>
        <dd class="col-sm-10">@Model.DataCadastro.ToString("dd/MM/yyyy")</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
