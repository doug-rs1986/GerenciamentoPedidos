@model GerenciamentoPedidos.Models.Cliente
@{
    ViewData["Title"] = "Detalhes do Cliente";
}
<h1>Detalhes do Cliente</h1>
<div class="mb-3">
    <label>Nome:</label>
    <span>@Model.Nome</span>
</div>
<div class="mb-3">
    <label>Email:</label>
    <span>@Model.Email</span>
</div>
<div class="mb-3">
    <label>Telefone:</label>
    <span>@Model.Telefone</span>
</div>
<div class="mb-3">
    <label>Data de Cadastro:</label>
    <span>@Model.DataCadastro.ToString("dd/MM/yyyy")</span>
</div>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
