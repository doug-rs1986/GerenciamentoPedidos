@model GerenciamentoPedidos.Models.Pedido
@{
    ViewData["Title"] = "Excluir Pedido";
}
<h1>Excluir Pedido</h1>
<h4>Tem certeza que deseja excluir este pedido?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.ClienteId</dd>
        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.DataPedido.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Valor Total</dt>
        <dd class="col-sm-10">@Model.ValorTotal.ToString("C")</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
