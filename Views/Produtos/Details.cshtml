@model GerenciamentoPedidos.Models.Produto
@{
    ViewData["Title"] = "Detalhes do Produto";
}
<h1>Detalhes do Produto</h1>
<div class="mb-3">
    <label>Nome:</label>
    <span>@Model.Nome</span>
</div>
<div class="mb-3">
    <label>Descrição:</label>
    <span>@Model.Descricao</span>
</div>
<div class="mb-3">
    <label>Preço:</label>
    <span>@Model.Preco.ToString("C")</span>
</div>
<div class="mb-3">
    <label>Estoque:</label>
    <span>@Model.QuantidadeEstoque</span>
</div>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
